@model Hotel_mvc1.Models.Soba

@{
    ViewBag.Title = "Create";
}

<h2>Dodaj sobu</h2>
@{ 
    int max = Convert.ToInt32(Session["MaxIDSoba"])+1;
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Soba</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.brojSobe, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.brojSobe, new { htmlAttributes = new { @class = "form-control",@min=max } })
                @Html.ValidationMessageFor(model => model.brojSobe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.brojKreveta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.brojKreveta, new { htmlAttributes = new { @class = "form-control",@min=1 } })
                @Html.ValidationMessageFor(model => model.brojKreveta, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.cijenaSobe, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cijenaSobe, new { htmlAttributes = new { @class = "form-control", @min="100" } })
                @Html.ValidationMessageFor(model => model.cijenaSobe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Natrag na listu", "Index")
</div>
